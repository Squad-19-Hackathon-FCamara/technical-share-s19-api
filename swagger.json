{
    "openapi": "3.0.0",
    "info":{
        "title": "API Technical Share",
        "description": "Essa API foi desenvolvida com o objetivo de: cadastrar e logar um usuario, e permetir que ele encontre e inicie conversas com mentores para terem orietacao e tirar duvidas",
        "contact": {
            "email": "squad19laranja@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/users/register": {
            "post": {
                "summary": "Rota de Registro",
                "description": "Essa rota é responsavel por registrar o usuario",
                "tags": ["User"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "User": {
                                    "value": {
                                        "name": "Felipe Junior",
                                        "email": "felipe@teste.com",
                                        "password": "12345678",
                                        "role": "Dev Fullstack ",
                                        "level": "Pleno",
                                        "tags": ["CSS", "HTML", "JavaScript"]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": { 
                        "description": "Usuário já existe!"
                    },
                    "201": {
                        "description": "Usuário criado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/users/login": {
            "post": {
                "summary": "Rota de Login",
                "description": "Essa rota é responsavel por autenticar e logar o usuario",
                "tags": ["User"],
                "security":[{"bearerAuth": [] }] ,
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "User": {
                                    "value": {                                     
                                        "email": "felipe@teste.com",
                                        "password": "12345678"                                       
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": { 
                        "description": "Usuário não encontrado!"
                    },
                    "200": {
                        "description": "Usuário logado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/users/{_id}": {
            "get": {
                "summary": "Rota de Busca por Usuario Específico",
                "description": "Essa rota é responsavel fazer a busca de um usuário específico no banco de dados pelo seu id",
                "tags": ["User"],
                "parameters": [
                    {
                        "name": "_id",
                        "in": "path",
                        "description": "Busca por id do Usuario",
                        "required": true
                    }
                ],

                "responses": {
                    "400": { 
                        "description": "Erro ao carregar usuário!"
                    },
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/users": {
            "get": {
                "summary": "Rota de Buscar por Usuario",
                "description": "Essa rota é responsavel fazer a listagem de todos os usuários",
                "tags": ["User"],

                "responses": {
                    "400": { 
                        "description": "Erro ao carregar os usuários!"
                    },
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/chat/create": {
            "post": {
                "summary": "Rota de Chat",
                "description": "Essa rota é responsavel por criar um chat entre dois usuários, usando como parametro quem enviou e recebeu uma mensagem",
                "tags": ["Chat"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Chat"
                            },
                            "examples": {
                                "Chat": {
                                    "value": {
                                        "from":"62543d823964863b42eeef29",
                                        "to": "62543d923964863b42eeef2c"
                                        
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": { 
                        "description": "Chat já existe"
                    },
                    "200": {
                        "description": "Chat criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/Chat"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/chat/getallchats": {
            "post": {
                "summary": "Rota de Listagem de Chats",
                "description": "Essa rota é responsavel por listar todos os chats em que um usuário está",
                "tags": ["Chat"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Chat"
                            },
                            "examples": {
                                "Chat": {
                                    "value": {
                                        "userId":"string"                                                                           
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": { 
                        "description": "Não foi possivel listar os chats"
                    },
                    "200": {
                        "description": "Chat listado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/Chat"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/message/addmessage": {
            "post": {
                "summary": "Rota de Envio de Mensagem",
                "description": "Essa rota é responsavel por criar menagens",
                "tags": ["Message"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Message"
                            },
                            "examples": {
                                "Message": {
                                    "value": {
                                        "from":"62543d823964863b42eeef29",
                                        "to": "62543d923964863b42eeef2c",
                                        "message": "Mensagem para teste"                                       
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": { 
                        "description": "Não foi possivel enviar a mensagem"
                    },
                    "200": {
                        "description": "Mensagem enviada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/Message"
                                }
                            }
                        }
                    }
                }
            }
            
        },
        "/message/getmessages": {
            "post": {
                "summary": "Rota de Listagem de Mensagens",
                "description": "Essa rota é responsavel por listar todos as mensagens de um chat",
                "tags": ["Message"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Message"
                            },
                            "examples": {
                                "Chat": {
                                    "value": {                                                                      
                                        "from": "62517ea69724c1300079b7fd",                                                                                                                                                       
                                        "to": "62517eb99724c1300079b800"                                                                                                                                                       
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "500": { 
                        "description": "Nao foi possivel listar as mensagens"
                    },
                    "200": {
                        "description": "Mensagens listada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type":"object",
                                    "$ref":"#/components/schemas/Chat"
                                }
                            }
                        }
                    }
                }
            }
            
        }
    },
    
    
    "components": {
        "schemas":{
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "required": true
                      },
                      "email": {
                        "type": "string",
                        "unique": true,
                        "required": true,
                        "lowercase": true
                      },
                      "password": {
                        "type": "string",
                        "required": true
                      },
                      "role": {
                        "type": "string",
                        "required": true
                      },
                      "level": {
                        "type": "string",
                        "required": true
                      },
                      "tags": {
                          "items": {
                        "type": "array"
                          },
                        "required": true
                      },
                      "_id": {
                          "type": "string"
                      }
                     
                }
            },
            "Chat": {
                "type": "object",
                "properties": {
                    "from": {
                        
                        "id": "_id",
                        "ref": "'User'"
                        
                    },
                    "to": {
                        "id": "_id",
                        "ref": "'User'"
                    },
                    "_id": {
                        "type":"string"
                    }
                    
                }               
            },
            "Message": {
                "type": "object",
                "properties": {
                    "message": {
                        
                        "type": "string",
                        "required": true
                        
                    },

                    "users": {
                        "items": {
                        "type": "array"
                        }
                },
                    "sender": {
                        "id": "_id",
                        "ref": "'User'",
                        "required": true
                    },
                    "_id": {
                        "type":"string"
                    }
                    
                }               
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }

}